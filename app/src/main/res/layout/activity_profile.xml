<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/txt_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Welcome Back!"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_marginBottom="60dp"/>

    <TextView
        android:id="@+id/txt_welcome_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome"
        app:layout_constraintStart_toStartOf="@id/txt_welcome"
        android:text="Username :"/>
    <TextView
        android:id="@+id/txt_welcome_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_username"
        app:layout_constraintStart_toStartOf="@id/txt_welcome"
        android:text="Email :"/>
    <TextView
        android:id="@+id/txt_welcome_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_email"
        app:layout_constraintStart_toStartOf="@id/txt_welcome"
        android:text="Password :"/>

    <TextView
        android:id="@+id/txt_input_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome"
        app:layout_constraintLeft_toRightOf="@id/txt_welcome_username"
        android:text="Username Here"
        android:textColor="@color/blue"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txt_input_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_input_username"
        app:layout_constraintLeft_toRightOf="@id/txt_welcome_username"
        android:text="Username Here"
        android:textColor="@color/blue"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/txt_input_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txt_welcome_email"
        app:layout_constraintLeft_toRightOf="@id/txt_welcome_username"
        android:text="Username Here"
        android:textColor="@color/blue"
        android:layout_marginLeft="10dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>